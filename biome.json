{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"all": true,
			"style": {
				"noDefaultExport": "off",
				"useNamingConvention": {
					"level": "error",
					"options": {
						"strictCase": false
					}
				}
			},
			"correctness": {
				"noNodejsModules": "off"
			}
		}
	},
	"files": {
		"ignore": ["node_modules", "dist"]
	},
	"javascript": {
		"formatter": {
			"bracketSpacing": false,
			"quoteStyle": "single"
		},
		"globals": ["$", "TYRANO"]
	},
	"css": {
		"formatter": {
			"quoteStyle": "single"
		}
	}
}
